{
  "name": "@tamyla/ui-components",
  "version": "2.0.1",
  "description": "Enhanced UI component system with Trading Portal sophistication - micro-interactions, accessibility excellence, and premium polish",
  "type": "module",
  "main": "dist/tamyla-ui.esm.js",
  "module": "dist/tamyla-ui.esm.js",
  "types": "dist/types/src/index.d.ts",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "exports": {
    ".": {
      "import": "./dist/tamyla-ui.esm.js",
      "require": "./dist/tamyla-ui.umd.js",
      "default": "./dist/tamyla-ui.esm.js",
      "types": "./dist/types/src/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.umd.js",
      "types": "./dist/types/core/index.d.ts"
    },
    "./atoms": {
      "import": "./dist/atoms/index.esm.js",
      "require": "./dist/atoms/index.umd.js",
      "types": "./dist/types/atoms/index.d.ts"
    },
    "./molecules": {
      "import": "./dist/molecules/index.esm.js",
      "require": "./dist/molecules/index.umd.js",
      "types": "./dist/types/molecules/index.d.ts"
    },
    "./applications": {
      "import": "./dist/applications/index.esm.js",
      "require": "./dist/applications/index.umd.js",
      "types": "./dist/types/applications/index.d.ts"
    },
    "./css": "./dist/tamyla-ui.css",
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.umd.js",
      "types": "./dist/types/react/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "rollup -c",
    "build:css": "node build/scripts/build-css.js",
    "build:individual": "node build/scripts/build-components.js",
    "clean": "rimraf dist",
    "dev": "vite serve --config build/vite.config.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "storybook": "storybook dev -p 6006 -c .storybook",
    "storybook:build": "storybook build -c .storybook -o dist/storybook",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "type-check": "echo 'TypeScript type checking - skipped for JavaScript project' && exit 0",
    "prepublishOnly": "npm run build",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish --tag latest",
    "analyze": "npm run build && npx bundle-analyzer dist/tamyla-ui.esm.js",
    "validate": "node scripts/basic-validate.js",
    "status": "node scripts/repo-status.js",
    "certify": "node scripts/working-certify.js",
    "certify-comprehensive": "node scripts/comprehensive-certify.js",
    "certify-zero-issues": "node scripts/comprehensive-certify.js",
    "quick-certify": "node scripts/working-certify.js",
    "deploy": "node scripts/deploy-to-github.js",
    "complete": "node scripts/complete-automation.js",
    "build:clean": "rimraf dist",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/html": "^7.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "babel-jest": "^29.0.0",
    "chalk": "^5.3.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.57.0",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^29.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-css-only": "^4.0.0",
    "rollup-plugin-filesize": "^10.0.0",
    "sass": "^1.0.0",
    "storybook": "^7.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "keywords": [
    "ui-components",
    "atomic-design",
    "vanilla-js",
    "react",
    "typescript",
    "modular",
    "reusable"
  ],
  "author": "Tamyla Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamylaa/tamyla-ui-components.git"
  },
  "bugs": {
    "url": "https://github.com/tamylaa/tamyla-ui-components/issues"
  },
  "homepage": "https://ui.tamyla.com",
  "dependencies": {
    "serialize-javascript": "^6.0.2",
    "smob": "^1.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}